# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Julia source files
*.jl text eol=lf
*.jmd text eol=lf

# Configuration files
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Scripts
*.sh text eol=lf
*.ps1 text eol=crlf

# Documentation
*.rst text eol=lf
LICENSE text eol=lf
README* text eol=lf

# Binary files
*.parquet binary
*.bson binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.so binary
*.dll binary
*.dylib binary
